  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}\\bin\\www",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "address": "127.0.0.1",
      "port": 5555, // SSH tunnel to actual server e.g. ssh -L 5555:127.0.0.1:5555 server ip
      "restart": false,
      "remoteRoot": "/shares/rpakdel/serialsqlite/",
      "localRoot": "${workspaceRoot}/",
      "sourceMaps": false
    }
  ]
}